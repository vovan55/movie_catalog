<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MovieDetailsActivity">

        <ImageView
            android:id="@+id/iv_origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/orig"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/tv_name_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="248dp"
            android:layout_marginEnd="16dp"
            android:gravity="top"
            android:text="@string/name_movie"
            android:textAppearance="@style/name_movie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:text="@string/id_tv_age"
            android:textAppearance="@style/id_tv_age"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_name_movie"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="@string/tag"
            android:textAppearance="@style/tag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_movie" />

        <TextView
            android:id="@+id/tv_reviews"
            android:layout_width="112dp"
            android:layout_height="20dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:text="@string/reviews"
            android:textAppearance="@style/reviews"
            app:layout_constraintStart_toEndOf="@+id/view_star4"
            app:layout_constraintTop_toBottomOf="@+id/tag" />

        <TextView
            android:id="@+id/tv_storyline"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/storyline"
            android:textAppearance="@style/storyline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_reviews" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:alpha="0.75"
            android:gravity="center_vertical"
            android:text="@string/description"
            android:textAppearance="@style/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_storyline" />

        <TextView
            android:id="@+id/tv_cast"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="116dp"
            android:text="@string/cast"
            android:textAppearance="@style/cast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/robert_downey"
            app:layout_constraintEnd_toStartOf="@+id/iv_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast"
            tools:ignore="contentDescription"
            app:layout_constraintDimensionRatio="1:1"/>

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/chris_evans"
            app:layout_constraintEnd_toStartOf="@+id/iv_3"
            app:layout_constraintStart_toEndOf="@+id/iv"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast"
            app:layout_constraintDimensionRatio="1:1"
            tools:ignore="contentDescription"/>

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/mark_ruffal"
            app:layout_constraintEnd_toStartOf="@+id/iv_4"
            app:layout_constraintStart_toEndOf="@+id/iv_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast"
            app:layout_constraintDimensionRatio="1:1"
            tools:ignore="contentDescription"/>

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/chris_hemsw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast"
            app:layout_constraintDimensionRatio="1:1"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/tv_robert_down"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/robert_down"
            android:textAppearance="@style/robert_down"
            app:layout_constraintEnd_toEndOf="@+id/iv"
            app:layout_constraintStart_toStartOf="@+id/iv"
            app:layout_constraintTop_toBottomOf="@+id/iv" />

        <TextView
            android:id="@+id/tv_chris_evans"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/chris_evans"
            android:textAppearance="@style/chris_evans"
            app:layout_constraintEnd_toEndOf="@+id/iv_2"
            app:layout_constraintStart_toStartOf="@+id/iv_2"
            app:layout_constraintTop_toBottomOf="@+id/iv_2" />

        <TextView
            android:id="@+id/tv_mark_ruffal"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/mark_ruffal"
            android:textAppearance="@style/mark_ruffal"
            app:layout_constraintEnd_toEndOf="@+id/iv_3"
            app:layout_constraintStart_toStartOf="@+id/iv_3"
            app:layout_constraintTop_toBottomOf="@+id/iv_3" />

        <TextView
            android:id="@+id/tv_chris_hemsw"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:text="@string/chris_hemsw"
            android:textAppearance="@style/chris_hemsw"
            app:layout_constraintEnd_toEndOf="@+id/iv_4"
            app:layout_constraintStart_toStartOf="@+id/iv_4"
            app:layout_constraintTop_toBottomOf="@+id/iv_4" />

        <View
            android:id="@+id/view_star1"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_star"
            app:layout_constraintEnd_toStartOf="@+id/view_star2"
            app:layout_constraintStart_toEndOf="@+id/view_star"
            app:layout_constraintTop_toBottomOf="@+id/tag" />

        <View
            android:id="@+id/view_star2"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@+id/view_star1"
            app:layout_constraintTop_toBottomOf="@+id/tag" />

        <View
            android:id="@+id/view_star"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tag" />

        <View
            android:id="@+id/view_star3"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@+id/view_star2"
            app:layout_constraintTop_toBottomOf="@+id/tag" />

        <View
            android:id="@+id/view_star4"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_star_grey"
            app:layout_constraintStart_toEndOf="@+id/view_star3"
            app:layout_constraintTop_toBottomOf="@+id/tag" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
