<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG">


    <ImageView
        android:id="@+id/iv_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movie"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_name_movie"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="@string/name_movie_fragment"
        android:textAppearance="@style/fragment_movie"
        app:layout_constraintEnd_toEndOf="@+id/iv_movie"
        app:layout_constraintStart_toStartOf="@+id/iv_movie"
        app:layout_constraintTop_toBottomOf="@+id/iv_movie"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min"
        android:textAppearance="@style/min"
        app:layout_constraintStart_toStartOf="@+id/tv_name_movie"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_movie" />

    <TextView
        android:id="@+id/tag_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="22dp"
        android:text="@string/tag_fragment"
        android:textAppearance="@style/tag_fragment"
        app:layout_constraintBottom_toBottomOf="@+id/iv_movie"
        app:layout_constraintStart_toStartOf="@id/iv_movie" />

    <View
        android:id="@+id/view_star1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_star"
        app:layout_constraintEnd_toStartOf="@+id/view_star2"
        app:layout_constraintStart_toEndOf="@+id/view_star"
        app:layout_constraintTop_toBottomOf="@+id/tag_fragment" />

    <View
        android:id="@+id/view_star2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/view_star1"
        app:layout_constraintTop_toBottomOf="@+id/tag_fragment" />

    <View
        android:id="@+id/view_star"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@id/iv_movie"
        app:layout_constraintTop_toBottomOf="@+id/tag_fragment" />

    <View
        android:id="@+id/view_star3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/view_star2"
        app:layout_constraintTop_toBottomOf="@+id/tag_fragment" />

    <View
        android:id="@+id/view_star4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_star_grey"
        app:layout_constraintStart_toEndOf="@+id/view_star3"
        app:layout_constraintTop_toBottomOf="@+id/tag_fragment" />

    <TextView
        android:id="@+id/tv_reviews"
        android:layout_width="53dp"
        android:layout_height="12dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:text="@string/reviews"
        android:textAppearance="@style/reviews_fragment"
        app:layout_constraintStart_toEndOf="@+id/view_star4"
        app:layout_constraintTop_toBottomOf="@+id/tag_fragment" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:background="#191926"
        app:layout_constraintStart_toStartOf="@id/iv_movie"
        app:layout_constraintTop_toTopOf="@id/iv_movie" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/id_tv_age"
        android:textAppearance="@style/age"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/rectangle"
        app:layout_constraintTop_toTopOf="@id/rectangle" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_like"
        app:layout_constraintTop_toTopOf="@+id/iv_movie"
        app:layout_constraintEnd_toEndOf="@id/iv_movie"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>